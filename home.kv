<FirstScreen>:
    ScrollView:
        do_scroll_x: True
        do_scroll_y: True
    GridLayout:
        canvas:
            Color:
                rgb: (.5, .5, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        cols: 1
        Label:
            text: root.overview
            font_size: self.width/10
            text_size: self.width, None
            halign: 'right'
            single_line: True
            padding_x: 4
        GridLayout:
            cols: 1
            Button:
                size_hint_y: .2
                size_hint_y: .2
                text: "H"
                font_size: self.height/2.5
                on_release:
                    app.add(self)
            Button:
                size_hint_y: .2
                size_hint_y: .2
                text: "<-"
                font_size: self.height/2.5
                background_color: 0.7, 0.2, 0.2, 0.8
                on_release:
                    app.lastc()
            GridLayout:
                cols: 4
                Button:
                    text: "C"
                    font_size: self.height/2.5
                    background_color: 1, 0, 0, 0.8
                    on_release:
                        app.clear()
                Button:
                    text: "()"
                    font_size: self.height/2.5
                    on_release:
                        app.add(self)
                Button:
                    text: "%"
                    font_size: self.height/2.5
                    on_release:
                        app.percent(self)
                Button:
                    text: "/"
                    font_size: self.height/2.5
                    on_release:
                        app.divide(self)
                Button:
                    text: "7"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "8"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "9"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "*"
                    font_size: self.height/2.5
                    on_release:
                        app.multi(self)
                Button:
                    text: "4"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "5"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "6"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "-"
                    font_size: self.height/2.5
                    on_release:
                        app.minus(self)
                Button:
                    text: "1"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "2"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "3"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "+"
                    font_size: self.height/2.5
                    on_release:
                        app.plus(self)
                Button:
                    text: "+/-"
                    font_size: self.height/2.5
                Button:
                    text: "0"
                    font_size: self.height/2.5
                    background_color: 0.2, 0.6, 0.1, 0.8
                    on_release:
                        app.add(self)
                Button:
                    text: "."
                    font_size: self.height/2.5
                Button:
                    text: "="
                    font_size: self.height/2.4
                    background_color: 0.1, 0.5, 0.6, 0.8
                    on_release:
                        app.plus_end()
                        app.multi_end()
                        app.minus_end()
                        app.divide_end()